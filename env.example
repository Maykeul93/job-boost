# Configuration d'environnement pour JobBoost

# Base de données
DATABASE_URL="postgresql://postgres:password@localhost:5432/jobboost"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Google OAuth (à configurer)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Stripe (clés de test pour le développement)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Redis
REDIS_URL="redis://localhost:6379"

# Logs (développement uniquement)
DEBUG="prisma:*"
NODE_ENV="development"

# Variables Docker (optionnelles)
POSTGRES_DB="jobboost"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
